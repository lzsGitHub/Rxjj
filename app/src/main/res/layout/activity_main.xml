<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.r.rxjj.test.MainActivity">

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/gradient"
        android:layout_alignParentTop="true"
        android:text="更多"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:gravity="center"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tt"
        android:background="#7eb5d8"
        ></android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vec_img"
        android:layout_below="@+id/rc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_skip"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_below="@+id/vec_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vector"
        android:textSize="12sp"
        android:textColor="#F00"
        android:drawableLeft="@drawable/ic_point"
        />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_point"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
