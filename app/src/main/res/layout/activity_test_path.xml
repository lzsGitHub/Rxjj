<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_path"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.r.rxjj.test.TestPathActivity">
    <Button
        android:id="@+id/bt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2阶贝塞尔"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        />
    <Button
        android:id="@+id/bt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="3阶贝塞尔"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_below="@+id/bt_1"
        />
    <Button
        android:id="@+id/bt_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="心形"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_below="@+id/bt_2"
        />
    <com.example.r.rxjj.view.BezierView
        android:id="@+id/bz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        />
    <com.example.r.rxjj.view.Bezier3View
        android:id="@+id/bz_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <RadioGroup
        android:id="@+id/bt_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <RadioButton
            android:id="@+id/kz_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="控制点1"
            android:textSize="15sp"
            />
        <RadioButton
            android:id="@+id/kz_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="控制点2"
            android:textSize="15sp"
            />
    </RadioGroup>
</RelativeLayout>
